<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
     <head>
    <script type="breeze/async-js" src="js/category-drag-scroll.js"/>
    </head>
    <body>
        <referenceContainer name="page.top">
            <block class="Magento\Catalog\Block\Category\View" name="category.subcategories" template="Magento_Catalog::category/subcategories.phtml" after="breadcrumbs">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Masaar\Breezeevo\ViewModel\Category</argument>
                </arguments>
            </block>

            <block class="Magento\Framework\View\Element\Template"
                   name="category.drag.script"
                   template="Magento_Catalog::category/category-drag-script.phtml"
                   after="category.subcategories" />
        </referenceContainer>
    </body>
</page>